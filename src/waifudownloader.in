import os
import sys
import signal
import locale
import gettext

VERSION = '0.2.9'
pkgdatadir = os.path.expanduser("~/.local/share/waifudownloader")
localedir = os.path.expanduser("~/.local/share/locale")

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)

# Fix for Termux: only bind locale if the directory exists
if os.path.isdir(localedir):
    try:
        locale.bindtextdomain('waifudownloader', localedir)
        locale.textdomain('waifudownloader')
        gettext.install('waifudownloader', localedir)
    except Exception:
        gettext.install('waifudownloader')
else:
    gettext.install('waifudownloader')

if __name__ == '__main__':
    import gi
    from gi.repository import Gio

    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'waifudownloader.gresource'))
    resource._register()

    from waifudownloader import main
    sys.exit(main.main(VERSION))